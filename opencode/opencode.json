{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "bedrock": {
      "model": "amazon-bedrock/claude-sonnet-4.5"
    },
    "build": {
      "model": "github-copilot/claude-sonnet-4.5"
    },
    "explore": {
      "model": "github-copilot/claude-haiku-4.5"
    },
    "general": {
      "model": "github-copilot/claude-haiku-4.5"
    },
    "plan": {
      "model": "github-copilot/gpt-5.2"
    }
  },
  "autoupdate": false,
  "enabled_providers": ["github-copilot"],
  "experimental": {
    "batch_tool": true,
    "openTelemetry": true
  },
  "instructions": [
    "/Users/stephen.collings/.config/opencode/instructions.nwb.md"
  ],
  "mcp": {
    "atlassian": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp"
    },
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "datadog": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.datadoghq.eu/api/unstable/mcp-server/mcp"
    },
    "grep_app": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "kubernetes": {
      "command": ["npx", "-y", "@mettle/boxed-kubernetes-mcp-server"],
      "enabled": false,
      "type": "local"
    },
    "maven": {
      "command": ["npx", "-y", "@mettle/boxed-maven-mcp-server"],
      "enabled": false,
      "type": "local"
    },
    "opensrc": {
      "command": ["npx", "-y", "opensrc-mcp"],
      "enabled": true,
      "type": "local"
    },
    "snyk": {
      "command": ["npx", "-y", "@mettle/boxed-snyk-mcp-server"],
      "enabled": false,
      "type": "local"
    }
  },
  "model": "github-copilot/claude-sonnet-4.5",
  "plugin": [],
  "provider": {
    "github-copilot": {
      "whitelist": [
        "claude-sonnet-4.5",
        "gpt-5",
        "gpt-5-mini",
        "gpt-5.1",
        "gpt-5.1-codex",
        "gpt-5.2",
        "gpt-5.2-codex",
        "claude-haiku-4.5",
        "claude-opus-4.5",
        "gpt-4o",
        "gpt-4.1",
        "gemini-2.5-pro"
      ]
    }
  },
  "share": "disabled",
  "small_model": "github-copilot/gpt-5-mini",
  "tools": {
    "codesearch": false,
    "websearch": false
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
