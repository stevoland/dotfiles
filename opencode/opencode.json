{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "bedrock": {
      "model": "amazon-bedrock/claude-sonnet-4.5"
    },
    "build": {
      "model": "github-copilot/claude-sonnet-4.5"
    },
    "explore": {
      "model": "github-copilot/claude-sonnet-4.5"
    },
    "general": {
      "model": "github-copilot/claude-sonnet-4.5"
    },
    "plan": {
      "model": "github-copilot/gpt-5.2"
    }
  },
  "autoupdate": false,
  "enabled_providers": ["github-copilot", "amazon-bedrock"],
  "experimental": {
    "batch_tool": true
  },
  "instructions": [
    "/Users/stephen.collings/.config/opencode/instructions.nwb.md"
  ],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "opensrc": {
      "type": "local",
      "command": ["npx", "-y", "opensrc-mcp"],
      "enabled": true
    },
    "maven": {
      "command": [
        "node",
        "/Users/stephen.collings/workspace/github.com/eeveebank/boxed-mcp-servers/boxed-maven-mcp-server/dist/index.js"
      ],
      "enabled": false,
      "type": "local"
    },
    "snyk": {
      "command": [
        "node",
        "/Users/stephen.collings/workspace/github.com/eeveebank/boxed-mcp-servers/boxed-snyk-mcp-server/dist/index.js"
      ],
      "enabled": false,
      "type": "local"
    },
    "datadog": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.datadoghq.eu/api/unstable/mcp-server/mcp"
    }
  },
  "model": "github-copilot/claude-sonnet-4.5",
  "permission": {
    "bash": {
      "*": "ask",
      ".gradlew*": "allow",
      "bun*": "allow",
      "cat*": "allow",
      "cut*": "allow",
      "diff*": "allow",
      "du*": "allow",
      "echo*": "allow",
      "file *": "allow",
      "find *": "allow",
      "gh co*": "allow",
      "gh pr checkout*": "allow",
      "gh pr checks*": "allow",
      "gh pr diff*": "allow",
      "gh pr list*": "allow",
      "gh pr status*": "allow",
      "gh pr view*": "allow",
      "gh search*": "allow",
      "git branch": "allow",
      "git branch -v": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git status*": "allow",
      "go*": "allow",
      "grep*": "allow",
      "gsed*": "allow",
      "head*": "allow",
      "less*": "allow",
      "ls*": "allow",
      "mkdir*": "allow",
      "more*": "allow",
      "npm add*": "ask",
      "npm*": "allow",
      "pwd*": "allow",
      "rg*": "allow",
      "sed*": "allow",
      "sort*": "allow",
      "stat*": "allow",
      "tail*": "allow",
      "tree*": "allow",
      "uniq*": "allow",
      "wc*": "allow",
      "whereis*": "allow",
      "which*": "allow"
    },
    "doom_loop": "ask"
  },
  "plugin": [],
  "provider": {
    "amazon-bedrock": {
      "options": {
        "profile": "sbx-core-bedrock",
        "region": "eu-west-2",
        "setCacheKey": true
      },
      "models": {
        "claude-sonnet-4.5": {
          "id": "arn:aws:bedrock:eu-west-2:986002058650:application-inference-profile/9ooh2l5hmp5r"
        }
      }
    },
    "github-copilot": {
      "whitelist": [
        "claude-sonnet-4.5",
        "gpt-5",
        "gpt-5-mini",
        "gpt-5.1",
        "gpt-5.1-codex",
        "gpt-5.1-codex-max",
        "gpt-5.2",
        "gpt-5.2-codex",
        "claude-haiku-4.5",
        "claude-opus-4.5",
        "gpt-4o",
        "gpt-4.1",
        "gemini-2.5-pro"
      ],
      "models": {
        "claude-sonnet-4.5": {
          "cost": {
            "input": 6,
            "output": 22.5,
            "cache_read": 0.6,
            "cache_write": 7.5
          }
        }
      }
    }
  },
  "share": "disabled",
  "small_model": "github-copilot/gpt-5-mini",
  "tools": {
    "codesearch": false,
    "websearch": false
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
